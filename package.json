{
  "name": "codiro",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "packageManager": "pnpm@10.12.1",
  "scripts": {
    "dev": "vite",
    "build": "tsc -b && vite build",
    "lint": "eslint .",
    "format": "prettier --write \"src/**/*.{ts,tsx,js,jsx,css}\" \"worker/**/*.{ts,tsx,js,jsx}\"",
    "format:check": "prettier --check \"src/**/*.{ts,tsx,js,jsx,css}\" \"worker/**/*.{ts,tsx,js,jsx}\"",
    "preview": "pnpm run build && vite preview",
    "deploy": "wrangler deploy",
    "cf-typegen": "wrangler types",
    "prepare": "husky",
    "db:generate": "drizzle-kit generate",
    "db:migrate:production": "wrangler d1 migrations apply codiro-db --remote",
    "db:migrate:local": "wrangler d1 migrations apply codiro-db --local",
    "db:studio": "drizzle-kit studio",
    "test": "vitest run src/",
    "test:workers": "vitest run worker/ --config vitest.config.workers.ts"
  },
  "dependencies": {
    "drizzle-orm": "^0.44.6",
    "react": "^19.1.1",
    "react-dom": "^19.1.1"
  },
  "devDependencies": {
    "@cloudflare/vite-plugin": "^1.13.7",
    "@cloudflare/vitest-pool-workers": "^0.9.10",
    "@eslint/js": "^9.33.0",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/react": "^19.1.10",
    "@types/react-dom": "^19.1.7",
    "@vitejs/plugin-react-swc": "^4.0.0",
    "drizzle-kit": "^0.31.5",
    "eslint": "^9.33.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "globals": "^16.3.0",
    "husky": "^9.1.7",
    "jsdom": "^27.0.0",
    "lint-staged": "^16.2.3",
    "prettier": "^3.6.2",
    "typescript": "~5.8.3",
    "typescript-eslint": "^8.39.1",
    "vite": "^7.1.2",
    "vitest": "^3.2.4",
    "wrangler": "^4.40.2"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "prettier --write",
      "eslint --fix"
    ],
    "*.{css,md,json}": [
      "prettier --write"
    ]
  }
}
